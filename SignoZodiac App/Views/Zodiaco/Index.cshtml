@model AppZodiac.ViewModel.SignoZodiacoViewModel

@{
ViewData["Title"] = "Home";
    var message = (string)ViewData["message"];
}

<div class="row">
    <div class="col-md-6 offset-3">
        <div class="card">
            <div style="background-color: dodgerblue;" class="card-header text-white text-center fst-italic fw-bold">
                <h3>Determina tu Signo Zodiacal</h3>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Zodiaco" asp-action="Index">

                    <div class="mb-3">
                        <label asp-for="dia" class="form-label">Day:</label>
                        <input asp-for="dia" class="form-control" type="number" required min="1" max="31" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="mes" class="form-label">Month:</label>
                        <select class="form-select" asp-for="mes">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">Octuber</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-outline-primary float-end">Determinar signo</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>
<br />
<hr />

<div>
    <h3 style="text-align:center; color:black"><i>Tu Signo Zodiacal es:</i></h3> <center><h3 style="color:blue"><i>~@message~</i></h3></center>
</div>
